; =========================================================================================================
;
;  Preheat for #FILAMENT_NAME at #FILAMENT_TEMPERATURE°C
;
; =========================================================================================================
;
if state.status == "processing"                                        ; printer is not currently printing!
   M291 S2 P"Cannot run during an ongoing print. Please run this macro when the printer is paused!" R"WARNING!"
   M99
;
M291 P"Press OK to continue or CANCEL to abort." R"Heat up for #FILAMENT_NAME at #FILAMENT_TEMPERATURE_ACTIVE°C?" S3
;
T0                                                                     ; select tool
G91                                                                    ; relative positioning
G1 Z20 F6000 H2                                                        ; lift z relative to current position
G90                                                                    ; absolute positioning
M568 P0 S#FILAMENT_TEMPERATURE_ACTIVE R#FILAMENT_TEMPERATURE_STANDBY A2                                                  ; set current tool temperature to filament #FILAMENT_TEMPERATURE°C
;
; =========================================================================================================
;